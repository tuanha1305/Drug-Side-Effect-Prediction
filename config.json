{
    "data": {
        "data_root": "data",
        "raw_data_dir": "data/raw",
        "processed_data_dir": "data/processed",
        "cache_dir": "data/cache",
        "drug_smiles_file": "drug_SMILES_750.csv",
        "vocab_file": "drug_codes_chembl_freq_1500.txt",
        "subword_map_file": "subword_units_map_chembl_freq_1500.csv",
        "drug_side_pkl": "drug_side.pkl",
        "max_drug_len": 50,
        "max_se_len": 50,
        "vocab_size": 2586,
        "num_side_effects": 994,
        "num_drugs": 750,
        "percentile_threshold": 95.0,
        "top_k_substructures": 50,
        "n_folds": 10,
        "random_state": 1,
        "addition_negative_strategy": "all"
    },
    "model": {
        "embedding_dim": 200,
        "max_position_embeddings": 500,
        "dropout_rate": 0.1,
        "num_encoder_layers": 8,
        "num_attention_heads": 8,
        "intermediate_size": 512,
        "attention_dropout": 0.1,
        "hidden_dropout": 0.1,
        "decoder_hidden_dims": [
            512,
            64,
            32
        ],
        "decoder_input_dim": 6912,
        "decoder_output_dim": 1,
        "decoder_dropout": 0.3,
        "use_batch_norm": true,
        "use_cross_attention": false,
        "conv_in_channels": 1,
        "conv_out_channels": 3,
        "conv_kernel_size": 3,
        "conv_padding": 0,
        "use_flash_attention": true,
        "use_sdpa": true,
        "use_gradient_checkpointing": false
    },
    "training": {
        "learning_rate": 0.0001,
        "weight_decay": 0.01,
        "betas": [
            0.9,
            0.999
        ],
        "eps": 1e-08,
        "optimizer": "adamw",
        "use_fused_optimizer": true,
        "use_scheduler": true,
        "scheduler_type": "cosine",
        "warmup_steps": 500,
        "warmup_ratio": 0.1,
        "num_epochs": 200,
        "batch_size": 128,
        "gradient_accumulation_steps": 1,
        "max_grad_norm": 1.0,
        "use_amp": false,
        "amp_dtype": "float16",
        "compile_model": false,
        "compile_mode": "reduce-overhead",
        "early_stopping": false,
        "patience": 20,
        "min_delta": 0.0001,
        "save_checkpoint_every": 50,
        "save_best_only": true,
        "monitor_metric": "auc",
        "log_interval": 100,
        "eval_interval": 1,
        "seed": 42
    },
    "dataloader": {
        "num_workers": 4,
        "pin_memory": true,
        "persistent_workers": true,
        "prefetch_factor": 2,
        "shuffle_train": true,
        "shuffle_val": false,
        "shuffle_test": false,
        "drop_last_train": false,
        "drop_last_val": false
    },
    "paths": {
        "checkpoint_dir": "checkpoints",
        "log_dir": "logs",
        "result_dir": "results",
        "tensorboard_dir": "logs/tensorboard"
    },
    "device": "cpu",
    "cuda_name": "cuda:0",
    "experiment_name": "drug_side_effect_prediction"
}